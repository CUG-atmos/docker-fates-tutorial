<?xml version="1.0"?>
<config_machines version="2.0">
   <machine MACH="docker">
      	<!-- customize these fields as appropriate for your system (max tasks) and
           desired layout (change '${HOME}/projects' to your
           prefered location). -->

      	<DESC>Containerized E3SM</DESC>
      	<NODENAME_REGEX>docker</NODENAME_REGEX>
	<OS>LINUX</OS>
    	<COMPILERS>gnu</COMPILERS>
    	<MPILIBS>openmpi</MPILIBS>
    	<PROJECT>fakeproject</PROJECT>
    	<CIME_OUTPUT_ROOT>/output</CIME_OUTPUT_ROOT>
    	<DIN_LOC_ROOT>/data</DIN_LOC_ROOT>
    	<DIN_LOC_ROOT_CLMFORC>/data/atm/datm7</DIN_LOC_ROOT_CLMFORC>
    	<DOUT_S_ROOT>$CIME_OUTPUT_ROOT/archive/$CASE</DOUT_S_ROOT>
    	<BASELINE_ROOT>$CIME_OUTPUT_ROOT/baselines</BASELINE_ROOT>
    	<CCSM_CPRNC>/home/glemieux/Repos/cime/tools/cprnc/cprnc</CCSM_CPRNC>
    	<GMAKE>make</GMAKE>
    	<GMAKE_J>16</GMAKE_J>
    	<BATCH_SYSTEM>none</BATCH_SYSTEM>
    	<SUPPORTED_BY>glemieux@lbl.gov</SUPPORTED_BY>
    	<MAX_TASKS_PER_NODE>16</MAX_TASKS_PER_NODE>
    	<MAX_MPITASKS_PER_NODE>16</MAX_MPITASKS_PER_NODE>
    	<PROJECT_REQUIRED>FALSE</PROJECT_REQUIRED>
    	<mpirun mpilib="mpi-serial">
      		<executable></executable>
      	</mpirun>
    	<mpirun mpilib="default">
      		<executable>mpirun</executable>
      		<arguments>
        		<arg name="num_tasks">-np $TOTALPES</arg>
        		<arg name="tasks_per_node"> -npernode $MAX_MPITASKS_PER_NODE</arg>
      		</arguments>
    	</mpirun>
    	<module_system type="none"/>
		<environment_variables>
			<env name="HDF5_HOME">/usr/local/hdf5</env>
			<env name="NETCDF_PATH">/usr/local/netcdf</env>
    	</environment_variables>
    </machine>
</config_machines>
